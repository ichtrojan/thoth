<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Thoth Dashboard</title>
</head>
<body>
<div class="container">
    <div class="row"
    style="margin-top:20px;"
    >
        <div class="column col-sm-6"><h3 class="h1-responsive">Thoth Logs</h3></div>
        <div class="column col-sm-6">
            <div class="form-group">
                <select name="range" id="date-range" class="browser-default custom-select form-control" onchange="filterDate()">
					<option value="1">All Logs</option>
					<option value="2">Today</option>
					<option value="3">Yesterday</option>
					<option value="4">Last 7 Days</option>
                </select>
            </div>
        </div>
        
    </div>
    <div class="row">
		<div class="column col-sm-12">
			<div class="card">
				<div class="card-header">
					<div style="text-align: left;"><h5>Logs</h5></div>
				</div>
				<div class="card-body" style="background-color: black;padding:30px;height:500px;overflow:auto;">
					<div class="content">
						<pre id="fileData" class="white-text">{{.Data}}</pre>
					</div>
				</div>
				<div class="card-footer">
				<small class="form-text text-muted">Powered by Thoth ðŸ™‚</small>
				</div>
			</div>
        </div>
    </div>
</div>

<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script type="text/javascript">

	const passw = prompt("enter secure key");

	const url = "http://{{.Host}}/auth"

	fetch(url,{
		headers:{
			key:passw
		},
	})
	.then(resp => resp.json())
	.then(data => {
		if (data.status == "success"){
			(() => {
				const data = document.getElementById("fileData");
				data.style.color = "white"
				const connection = new WebSocket("ws://{{.Host}}/ws?lastMod={{.LastMod}}");
				connection.onclose = function (evt) {
					data.textContent = 'Connection closed';
				}
				
				connection.onmessage = function (evt) {
					
					var dataArr = evt.data.split(/\r?\n/);
					cleanArr = []
					dataArr.forEach(dat => {
						if(dat.length != 0){
							cleanArr.push(dat)
						}
					})
					
					localStorage.setItem("logsLog",JSON.stringify(cleanArr))
					cleanData(cleanArr)
					
				}
			})();
		}else{
			const data = document.getElementById("fileData");
        	data.textContent = 'Invalid security key';
		}
	})

	function cleanData(dataList){
		
		const data = document.getElementById("fileData");
		
		if(dataList.length == 0){
			data.textContent = "No logs to show";
			
		}else{
			var dataStr = ""
			dataList.forEach(dat => {
				dataStr += dat + "\n";
			})
			data.textContent = dataStr;
		}
		
	}
	function getWeek(){
		var date = new Date()
		var month = date.getMonth() + 1;
		var day = date.getDate();

		dateList = []

		day = parseInt(day)+1

		for(var i = 1; i <= 8; i++){
			
			if(day == 0){

				month -= 1;

				if([4,6,9,10].includes(month) ==  true){

					day = 30

				}else if (month == 2){
					
					day = 28; 

				}else{

					day = 31

				}

			}else{
				day = day - 1
			}
			
			if(String(month).length == 1){
				month = "0"+month;
			}
			if(String(day).length == 1){
				day = "0"+day;
			}

			newDate = date.getFullYear() + "-" + month + "-" + day ;
			if (day != "00"){
				
				dateList.push(newDate)
			}
		}

		return dateList
	}

	function filterDate(){
		var theData = JSON.parse(localStorage.getItem("logsLog"));
		
		
		var value = document.getElementById("date-range").value;

		if(value == "1"){
			cleanData(theData)
		}else{
			switch (value){
			case "2":
				var filteredData = []
				var date = new Date();
				var month = date.getMonth() + 1;
				var day = date.getDate()
				if (String(month).length == 1){
					month = "0" + month
				}
				if (String(day).length == 1){
					day = "0" + day
				}

				var query = date.getFullYear() + "-" + month + "-" + day;
				
				theData.forEach(dat => {
					if(dat.includes(query) == true){
						filteredData.push(dat)
					}
				})
				cleanData(filteredData)
				break
			case "3":
				var filteredData = []
				var date = new Date();
				var month = date.getMonth() + 1;
				var day = date.getDate() - 1;

				
				if(day == 0){
					month -= 1;
					if([4,6,9,10].includes(month) ==  true){
						day = 30
					}else if (month == 2){
						// do logic for leap year
						day = 28; 
					}else{
						day = 31
					}
				}
				if (String(month).length == 1){
					month = "0" + month
				}
				if (String(day).length == 1){
					day = "0" + day
				}
				var query = date.getFullYear() + "-" + month + "-" + day;
				
				theData.forEach(dat => {
					
					if(dat.includes(query) == true){
						filteredData.push(dat)
					}
				})
				cleanData(filteredData)
				break
			case "4":
				var filteredData = []
				var dates = getWeek()
				theData.forEach(dat => {
					if(dates.includes(dat.substring(1,11)) == true){
						filteredData.push(dat)
					}
				})
				cleanData(filteredData)
				break
			default:
				break
			}
			

			
		}
		
	}

</script>

